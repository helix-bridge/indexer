// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HistoryRecord {
  id String @id
  fromChain String
  toChain String
  bridge String
  nonce BigInt
  requestTxHash String
  sender String
  recipient String
  token String
  sendAmount String
  recvAmount String
  startTime Int
  endTime Int?
  result Int
  fee String
  feeToken String
  targetTxHash String
  reason String
  messageNonce String
}

model DailyStatistics {
  fromChain String
  toChain String
  bridge String
  timestamp Int
  token String
  dailyVolume BigInt?
  dailyCount BigInt?
  @@unique([fromChain, toChain, timestamp, token], name: "daily_statistics_id")
}
